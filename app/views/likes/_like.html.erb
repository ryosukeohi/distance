
<% if course.liked_by?(current_user) %>
  <%= link_to course_likes_path(course), method: :delete, remote: true do %>
    ♥<%= course.likes.count %>いいね
  <% end %>
<% else %>
  <%= link_to course_likes_path(course), method: :post, remote: true do %>
    ♡<%= course.likes.count %>いいね
  <% end %>
<% end %>
