<div class="container">
<div class="row">
<div class="border col-5 mt-5 justify-content-center d-flex align-items-center">
<div class="form">
<h4>会員情報編集</h4>

<%= form_with model: @user, local:true do |f| %>
  <div class="form-group">
    <%= f.attachment_field :profile_image %>
  </div>

  <div class="form-group col-5">
    <label for="inputName">ニックネーム</label>
    <%= f.text_field :name, id:"inputName", placeholder: "ニックネーム", class: "form-control" %>
  </div>

  <div class="form-group col-5">
    <label for="inputIntroduction">自己紹介</label></br>
    <%= f.text_area :introduction, id:"inputIntroduction", placeholder: "自己紹介" %>
  </div>

  <div class="btn-group">
    <%= f.submit "保存", class: "btn btn-success mr-3" %>
    <%= link_to "退会", confirm_path, class: "btn btn-danger" %>
  </div>

<% end %>
</div>
</div>
</div>
</div>