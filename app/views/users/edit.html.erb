<h4>会員情報編集</h4>

<%= form_with model: @user, local:true do |f| %>
  <div class="field">
    <%= f.attachment_field :profile_image, placeholder: "画像" %>
  </div>

  <div class="field">
    <label for="inputName">ニックネーム</label>
    <%= f.text_field :name, id:"inputName", placeholder: "ニックネーム" %>
  </div>

  <div class="field">
    <label for="inputIntroduction">自己紹介</label>
    <%= f.text_area :introduction, id:"inputIntroduction", placeholder: "自己紹介" %>
  </div>

  <div class="actions">
    <%= f.submit "保存" %>
  </div>
<% end %>
<%= link_to "退会", confirm_path %>