<main class="main-v">
<div class="main-container">
  <%= image_tag 'marathon.jpg', :width => '100%', :height => '450' %>
</div>
</main>

<div class="card-list-container">
<% @courses.each do |course| %>
  <div class="card w-20 mx-auto">
    <% course.course_images.first(1).each do |image| %>
      <%= attachment_image_tag image, :image, :fill, 200, 150, format: 'jpeg' %>
    <% end %>
    <%= link_to course_path(course) do %>
      <p><%= course.title %></p>
    <% end %>
    </div>
  <% end %>
</div>
</div>
