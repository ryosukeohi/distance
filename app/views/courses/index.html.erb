<main class="main-v">
<div class="main-container">
  <%= image_tag 'marathon.jpg', :width => '100%', :height => '450' %>
</div>
</main>
<div class="card-deck" style="width: 100%">
<% @courses.each do |course| %>
    <% course.course_images.first(1).each do |image| %>
      <div class="card" style="width:3rem">
      <%= attachment_image_tag image, :image, class: "card-img-top" %>
    <% end %>
    <%= link_to course_path(course) do %>
      <p><%= course.title %></p>
    <% end %>
</div>
<% end %>
</div>
