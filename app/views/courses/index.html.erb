<main class="main-v">
<div class="main-container">
  <%= image_tag 'marathon.jpg', :width => '100%', :height => '450' %>
</div>
</main>

<div class="container">
<div class="card d-flex flex-row" style="width: 250px">
<% @courses.each do |course| %>
    <% course.course_images.first(1).each do |image| %>
      <%= attachment_image_tag image, :image, class: "card-img-top" %></br>
    <% end %>
    <div class="card-body d-flex flex-column">
      <div class="card-title">
        <%= link_to course_path(course) do %>
          <%= course.title %>
        <% end %>
      </div>
    </div>
    <% end %>
</div>
</div>
