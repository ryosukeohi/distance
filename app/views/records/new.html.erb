<div class="container-fluid bg-light">

  <% if @record.errors.any? %>
    <p><%=@record.errors.count %>件のエラーが発生しました</p>
    <% @record.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
  <% end %>

  <div class="row">
    <div class="col justify-content-center d-flex align-items-center mt-5">
<div class="form">
<h1>記録投稿</h1>
<%= form_with model: @record, local:true do |f| %>
  <div class="form-group">
    <%= f.label :start_time, "日付" %>
    <%= f.datetime_select :start_time %>
  </div>

  <div class="form-group">
    <%= f.attachment_field :record_images_images, multiple: true %>
  </div>

  <div class="form-group">
    <label for="inputDistance">距離</label>
    <%= f.text_field :distance, id:"inputDistance", placeholder: "距離" %>km
  </div>

  <div class="form-group">
    <label for="inputDescription">本文</label>
    <%= f.text_area :description, id:"inputDescription", placeholder: "本文" %>
  </div>

  <div class="actions mb-2">
    <%= f.submit "投稿", class: "btn btn-secondary" %>
  </div>
<% end %>
</div>
</div>
</div>
</div>